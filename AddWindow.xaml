<Window x:Class="ZTProj.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZTProj"
        mc:Ignorable="d"
        Title="AddWindow" Height="450" Width="800">
    <Grid>
        
        <Label Content="Słówko" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 200" FontSize="18" Width="200"/>
        <TextBox Name="wordTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 140" FontSize="18" Width="200"/>
        <Label Content="Tłumaczenie" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 80" FontSize="18" Width="200"/>
        <TextBox Name="transTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 20" FontSize="18" Width="200"/>
        <Label Content="Język" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 50 0 0" FontSize="18" Width="200"/>
        <TextBox Name="langTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 120 0 0" FontSize="18" Width="200"/>
        <Button Content="Zapisz" x:Name="addButton" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 190 0 0" FontSize="18" Width="200" Click="addButton_Click"/>
    </Grid>
</Window>
